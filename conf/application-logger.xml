<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} %-5p [%t] %logger - %message%n%xException%n%mdc</pattern>
    </encoder>
  </appender>
  <root level="ERROR">
    <appender-ref ref="STDOUT" />
  </root>
  <logger name="play" level="INFO">
    <appender-ref ref="STDOUT" />
  </logger>
  <logger name="application" level="DEBUG" additivity="true">
    <appender-ref ref="STDOUT" />
  </logger>
  <logger name="controllers" level="DEBUG" additivity="true">
    <appender-ref ref="STDOUT" />
  </logger>
  <logger name="org.sagebionetworks.bridge" level="DEBUG" additivity="true">
    <appender-ref ref="STDOUT" />
  </logger>
  <logger name="org.sagebionetworks.dynamodb" level="DEBUG" additivity="true">
    <appender-ref ref="STDOUT" />
  </logger>
  <logger name="org.springframework" level="INFO" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>
</configuration>
